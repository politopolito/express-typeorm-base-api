{
  "compilerOptions": {
    "emitDecoratorMetadata": true, // needed for typeorm
    "experimentalDecorators": true, // needed for typeorm
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src"
  ]
}
